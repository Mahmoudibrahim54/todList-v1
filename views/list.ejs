

  <%- include("header"); -%>
  
  <div id="heading" class="box">
    <h1><%= listName %> </h1>

  </div>

  <div class="box">
    <ul>
      <% for(var i = 0; i < newItems.length; i++){ %>
      <div class="item">
        <input type="checkbox">
        <p><%= newItems[i] %> </p>
      </div>
      <% }; %>

      <form class="item" action="/" method="post">
        <input type="text" name="newTask" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%= listName %>">+</button>
      </form>
    </ul>
  </div>

  <%- include("footer"); -%>
